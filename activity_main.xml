<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000235"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="25dp"
            android:layout_height="27dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="NotSibling" />

        <EditText
            android:id="@+id/cmpname"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:background="#000235"
            android:text="@string/drivesync_scheduler"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/abt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10dp"
            android:background="#000235"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text1"
                android:layout_width="150dp"
                android:layout_height="82dp"
                android:layout_marginStart="20sp"
                android:text="Book Your Driving Lessons Online with Ease"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/text2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="20sp"
                android:text="Convenient Online Booking – Your Journey Starts Here"
                android:textColor="@color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SmallSp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="200dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/img2" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text3"
                android:layout_width="150dp"
                android:layout_height="82dp"
                android:layout_marginStart="20sp"
                android:text="Renew or Update Your License Online"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/text4"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="20sp"
                android:text="Stay Legal:\nDon't Let Your License Expire – Renew Now!"
                android:textColor="@color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SmallSp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text5"
                android:layout_width="200dp"
                android:layout_height="74dp"
                android:layout_marginStart="20sp"
                android:text="Why Choose ‘DriveSync Scheduler’ for Driving Lessons?"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/text6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="0dp"
                android:text="Convenient Online Booking.\nFlexible Scheduling Tailored to Your Availability.\nSafety First: Our Commitment to Responsible Driving.\nLearn to Drive Safely with Our Expert Instructors."
                android:textColor="@color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,SmallSp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        />


</RelativeLayout>